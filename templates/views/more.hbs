    <style>
        /* Add smooth scrolling overflow */
        body {
            overflow-y: scroll;
            overscroll-behavior: contain;
        }

        /* Add fade-in animation for cards */
        .card {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.5s ease forwards;
        }

        .card-body {
            max-height: 430px;
            overflow-y: auto; /* Enable vertical scroll if content exceeds max height */
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Add transition effects */
        .feature-box .card {
            transition: transform 0.3s, box-shadow 0.3s, background-color 0.3s;
        }

        .feature-box .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            background-color: #dbf0edda; /* Change background color on hover */
        }

        /* Add custom styles for galleries */
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .gallery img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            border: 2px solid #fff; /* Add border for frame effect */
            cursor: pointer;
            transition: transform 0.3s;
        }

        .gallery img:hover {
            transform: scale(1.1);
        }

        /* Add custom styles for artist showcase */
        .artist {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .artist img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .artist-info {
            flex: 1;
        }

        .artist-info h3 {
            margin-bottom: 10px;
        }

        .artist-info p {
            margin-bottom: 0;
        }

        /* Center header and footer text */
        .header-container {
            text-align: center;
        }

        .footer {
            text-align: center;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px 0;
        }

        /* Set minimum height for content area */
        .content {
            min-height: calc(100vh - 120px); /* Adjust according to navbar and footer height */
            /* 120px = height of navbar + height of footer */
            padding-bottom: 60px; /* Adjust according to footer height */
        }

        /* Reduce size of carousel */
        #carouselExampleControls {
            max-width: 400px;
            margin: 0 auto;
            border-radius: 10px;
            overflow: hidden;
        }

        /* Add animation to carousel images */
        .carousel-item img {
            width: 100%;
            height: 250px;
            margin: 2px solid blue;
            border-radius: 20px;
            border-radius: 10px;
            transition: transform 0.5s ease;
        }

        /* Add hover effect to carousel images */
        .carousel-item img:hover {
            transform: scale(1.05);
        }
