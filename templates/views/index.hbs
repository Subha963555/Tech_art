    /* Slideshow Styles */
    .slideshow-container {
      max-width: 350px; /* Adjust max-width as needed */
      position: relative;
      margin: auto;
      overflow: hidden;
      float: right; /* Move the slideshow to the right side */
    }
img.slide-img{
  height: 350px;
}
    .mySlides {
      display: none;
      animation: fade 2s ease-in-out;
    }

    @keyframes fade {
      from { opacity: 0.4; }
      to { opacity: 1; }
    }

    .slide-img {
      width: 350px; /* Adjust image width */
      
      border: 2px solid #007bff; /* Add border */
      border-radius: 8px; /* Add border radius */
      transition: transform 0.3s ease; /* Add transition effect */
    }

    .slide-img:hover {
      transform: scale(1.1); /* Add hover scale effect */
    }
  </style>
</head>
