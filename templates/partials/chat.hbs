<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-d47/wA6l4cbFC6uz5s1LlLoUt4H13V6Nfb4uZqA/t+g16Ue9zKt0e3OQ5FqImdYpd9l9nMt2WO+5f3aj2bJxjCg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #495057;
            margin: 0;
            padding: 0;
        }
.contact-icons {
    position: absolute;
    bottom: 20px;
    left: 20px;
}

.contact-icons a {
    display: inline-block;
    margin-right: 10px;
    color: #333;
    font-size: 24px;
}

.contact-icons a:last-child {
    margin-right: 0;
}

        .chatbot-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px; /* Adjust width as needed */
            z-index: 9999; /* Ensure the chatbot is above other elements */
            display: none; /* Initially hidden */
        }

        .close-button {
            background-color: #e9ecef;
            border: none;
            cursor: pointer;
            padding: 5px 10px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .close-button:hover {
            background-color: #ddd;
        }

        .chatbot-header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .chat-messages {
            max-height: 200px; /* Adjust max height as needed */
            overflow-y: auto;
            padding: 10px;
        }

        .user-message, .chatbot-message {
            padding: 5px 10px;
            margin-bottom: 5px;
            border-radius: 5px;
        }

        .user-message {
            background-color: #007bff;
            color: #fff;
        }

        .chatbot-message {
            background-color: #f0f0f0;
            color: #333;
        }

        .chat-input {
            display: flex;
            align-items: center;
            padding: 10px;
        }

        #chat-input {
            flex: 1;
            border: 1px solid #ccc;
            border-radius: 20px;
            padding: 8px 15px;
            margin-right: 10px;
        }

        .icons {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
            cursor: pointer;
        }

        .icons i {
            margin-right: 10px;
        }

        .icons i:hover {
            color: #007bff;
        }
        
        .contact-icons {
    position: absolute;
    bottom: 0px;
    left: 100px;
}
.contact-icons a:hover {
    color: #007bff; /* Change color on hover */
}
input#chat-input {
    margin-bottom: 30px;
}
div#sendMessageIcon {
    margin-bottom: 40px;
}
    </style>

    <title>Chatbot</title>
</head>
<body>
   <div class="icons" id="openChatIcon" style="font-size: 88px;">
    <i class="fas fa-comments"></i>
</div>


    <div class="chatbot-container" id="chatbotContainer">
    <button class="close-button" id="closeButton">X</button>
    <div class="chatbot-header">
        <h2>Chatbot</h2>
    </div>
    <div class="chat-messages" id="chatMessages">
        <!-- Messages will be displayed here -->
    </div>
    <div class="chat-input">
        <input type="text" id="chat-input" placeholder="Type your message...">
        <div class="icons" id="sendMessageIcon">
            <i class="fas fa-paper-plane"></i>
        </div>
    </div>
    <div class="contact-icons">
        <a href="tel:9932876978"><i class="fas fa-phone"></i></a>
        <a href="mailto:bossubhadip19@gmail.com"><i class="fas fa-envelope"></i></a>
    </div>
</div>



    <!-- Use the latest version of Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-hD/812hipT8mNQZz4eLV3m/kCjKk8L0ZtR5K80qjlp/hFI8LWygQ9jPjcc" crossorigin="anonymous"></script>

    <!-- Your JavaScript code -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const chatMessages = document.getElementById("chatMessages");
            const chatInput = document.getElementById("chat-input");
            const sendMessageIcon = document.getElementById("sendMessageIcon");
            const chatbotContainer = document.getElementById("chatbotContainer");
            const closeButton = document.getElementById("closeButton");

            // Open chatbot when chat icon is clicked
            document.getElementById("openChatIcon").addEventListener("click", function() {
                chatbotContainer.style.display = "block";
            });

            // Close chatbot when close button is clicked
            closeButton.addEventListener("click", function() {
                chatbotContainer.style.display = "none";
            });

            // Send message when send button is clicked for chat application
            sendMessageIcon.addEventListener("click", function() {
                const message = chatInput.value.trim();
                if (message !== "") {
                    // Replace the 'xxxxxxxxxxx' with your WhatsApp number
                    window.open(`https://wa.me/9932876978?text=${encodeURIComponent(message)}`, '_blank');
                    chatInput.value = ""; // Clear the input field after sending message
                }
            });
        });
    </script>

</body>
</html>
